<div class="body">
	<div class="container">
		<p id="notice"><%= notice %></p>
		<div class="row">
			<!-- User info & New Book -->
			<div class="col-xs-3">
				<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
				<table class="table">
				  <tbody>
				  	<tr></tr>
				  	<tr>
				  	  <th>name</th>
				  	  <th><%= @user.name %></th>
				  	</tr>
				  	<tr>
				  	  <th>introduction</th>
				  	  <th><%= @user.introduction %></th>
				  	</tr>
				  </tbody>
				 </table>
				 <div class="row">
					 	<%= link_to edit_user_path(@user.id) do %>
							<i class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></i>
						<% end %>
				 </div>

				 <h2>New book</h2>
				 <%= form_for(@book, url: '/books') do |f| %>
					<% if @book.errors.any? %>
						<div class=“alert alert-warning”>
							<ul>
							  <% @book.errors.full_messages.each do |message| %>
							    <li><%= message %></li>
							  <% end %>
							</ul>
						</div>
					<% end %>
					<p>Title</p>
					<p class="text-box"><%= f.text_field :title %></p>
					<p>Opinion</p>
					<p class="text-box"><%= f.text_area :body %></p>
					<%= f.submit "Create Book", class:"btn btn-primary" %>
				<% end %>
			</div>

			<!-- Books -->
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thread>
					  <tr>
					  	<th></th>
					  	<th>Title</th>
					  	<th>Opinion</th>
					  </tr>
					</thread>
					<tbody>

						  <% @books.each do |book| %>
							  <tr>
							  	<td>
							  		<%= link_to user_path(book.user_id) do %>
								  		<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size:'40x40' %>
								  	<% end %>
								</td>
								<td>
								  <%= link_to book_path(book.id) do %>
								    <%= book.title %>
								  <% end %>
								</td>
								<td>
								  <%= book.body %>
								</td>
							  </tr>
						  <% end %>

					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>