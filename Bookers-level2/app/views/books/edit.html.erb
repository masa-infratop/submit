<div class="body">
	<div class="container">
		<p id="notice"><%= notice %></p>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Editing Book</h1>
				<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>

					<% if @book.errors.any? %>
						<div class=“alert alert-warning”>
						  <ul>
							<% @book.errors.full_messages.each do |message| %>
								<li><%= message %></li>
							<% end %>
						  </ul>
						</div>
					<% end %>
					<div class="field">
						<%= f.label :Title %><br />
						<%= f.text_field :title %> <!-- 自動で名前入ってる機能 -->
					</div>
					<div class="field">
						<%= f.label :Opinion %><br />
						<%= f.text_area :body %>
					</div>
					<%= f.submit "Update Book", class:"btn btn-primary" %>
				<% end %>

				<p>
				  <u><%= link_to 'Show', book_path(@book.id) %></u>
				  |
				  <u><%= link_to 'Back', books_path %></u>
				</p>
			</div>
		</div>
	</div>
</div>