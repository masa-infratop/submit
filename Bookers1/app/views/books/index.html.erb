<!-- CSS読み込み -->
<head>
<%= stylesheet_link_tag 'index' %>
</head>

<p id="notice">
	<%= notice %>
</p>

<h1>Books</h1>

<!-- Index part -->
<body>
	<table>
	　<!-- tag -->
	  <thead>
		 <tr>
			<th><strong>Title</strong></th>
			<th><strong>Body</strong></th>
			<th colspan="3"></th>
		 </tr>
	  </thead>
	  <!-- Display the books -->
	  <tbody>

		  <% @books.each do |book| %>

		  	<tr>
		  	  <td>
		  	  	<%= book.title %>
		  	  </td>
		  	  <td>
		  	  	<%= book.body %>
		  	  </td>
		  	  <td>
		  	    <%= link_to "Show", book_path(book.id) %>
		  	  </td>
		  	  <td>
		  	  	<%= link_to "Edit", edit_book_path(book.id) %>
		  	  </td>
		  	  <td>
		  	  	<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
		  	  </td>
		   	</tr>
		  <% end %>
	  </tbody>
	</table>

	<!-- New book part -->
	<h2>New book</h2>

	<%= form_for(@book, url: '/books') do |f| %>

		<% if @book.errors.any? %>
	      <div class=“alert alert-warning”>
	        <ul>
	          <% @book.errors.full_messages.each do |message| %>
	            <li><%= message %></li>
	          <% end %>
	        </ul>
	      </div>
	    <% end %>

		<p>Title</p>
		<p class="text-box"><%= f.text_field :title %></p>

		<p>Body</p>
		<p class="text-box"><%= f.text_area :body %></p>

		<p><%= f.submit 'Create Book' %></p>

	<% end %>

</body>