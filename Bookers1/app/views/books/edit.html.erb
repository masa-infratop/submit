<!-- CSS読み込み -->
<head>
<%= stylesheet_link_tag 'edit' %>
</head>

<h1>Editing Book</h1>
<body>
	
	<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>

		<% if @book.errors.any? %>
		      <div class=“alert alert-warning”>
		        <ul>
		          <% @book.errors.full_messages.each do |message| %>
		            <li><%= message %></li>
		          <% end %>
		        </ul>
		      </div>
		<% end %>

	 	<p>Title</p>
			<%= f.text_field :title %>
		<p>Body</p>
			<%= f.text_area :body %>
		<p>
			  <%= f.submit 'update Book' %>
		</p>

		<p>
		<u><%= link_to 'Show', book_path(@book.id) %></u>
		|
		<u><%= link_to 'Back', '/books' %></u>
		</p>
		
	<% end %>

	
</body>